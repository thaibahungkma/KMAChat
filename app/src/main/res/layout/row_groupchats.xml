<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/facebook4"
    app:contentPadding="3dp"
    android:layout_marginTop="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/groupIconIv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_group" />
        <TextView
            android:id="@+id/groupTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:text="Tên nhóm"
            android:layout_toEndOf="@+id/groupIconIv"
            android:layout_toRightOf="@+id/groupIconIv"
            android:textSize="18sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/groupIconIv"
            android:layout_toRightOf="@+id/groupIconIv"
            android:layout_below="@+id/groupTitleTv"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:text="Người gửi"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/messageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupTitleTv"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/nameTv"
            android:layout_toRightOf="@+id/nameTv"
            android:singleLine="true"
            android:textColor="@color/black"
            android:text="Tin nhắn" />

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTv"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:text="10:10 PM" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>